<!-- Bootstrap sign in form adapted to GMN -->
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Register â€¢ Global Movement network</title>
    <%- include('shared-links') -%>
    <link rel="stylesheet" href="css/register.css">
    <%- include('head-script') -%>
  </head>
  <body>
    <div class="form-container text-center h-fill bg-vanilla-grey">
      <form class="form-signin">
        <a href="/" >
          <img id="gmn-logo"
               class="shrink"
               src="images/gmn-logo-no-bkgrnd.png"
               alt="Global Movment Network Logo"
               style="height:auto; width:20vw; margin-left: -4vw; margin-top: -5vh;">
        </a>
        <h1 class="h3 mb-3 font-weight-normal text-black">
          Registration
        </h1>

        <!-- Name -->
        <div class="row">
          <div id="first-name-col" class="col-6">
            <label for="first-name"
                   class="sr-only">
              First Name
            </label>
            <input type="text"
                   id="first-name"
                   class="form-control top-radius"
                   placeholder="First Name"
                   required=""
                   autofocus="">
          </div>
          <div id="last-name-col" class="col-6">
            <label for="last-name"
                   class="sr-only">
              Last Name
            </label>
            <input type="text"
                   id="last-name"
                   class="form-control top-radius"
                   placeholder="Last Name"
                   required=""
                   style="">
          </div>
        </div>

        <!-- Email -->
        <label for="input-email" class="sr-only">
          Email address
        </label>
        <input type="email"
               id="input-email"
               class="form-control no-radius"
               placeholder="Email Address"
               required="">

        <!-- Password -->
        <label for="input-password"
               class="sr-only">
          Password
        </label>
        <input type="password"
               id="input-password"
               class="form-control no-radius"
               placeholder="Password"
               required="">
        <label for="verify-password"
               class="sr-only">
          Verify Password
        </label>
        <input type="password"
               id="verify-password"
               class="form-control bottom-radius"
               placeholder="Verify Password"
               required="">
        <div class="checkbox">
          <label>
            <input type="checkbox" value="terms-and-conditions" required="">
            I agree to the <a href="">terms & conditions</a>
          </label>
        </div>
        <button class="btn btn-lg btn-block bg-mtn-shadow-blue text-vanilla-grey"
                type="submit">
          Sign Up
        </button>
      </form>
    </div>
    <%- include('body-script') -%>
  </body>
</html>
